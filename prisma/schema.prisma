generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  name          String
  username      String
  email         String
  isAdmin       Boolean
  preferences   Json
  writtenPosts  Post[]
  favoritePosts Post[]
}

model Post {
  rating    Float
  createdAt DateTime
  updatedAt DateTime
  author    User     @relation('writtenPosts',fields: [authorId], references: [id])
  authorId  String
}
